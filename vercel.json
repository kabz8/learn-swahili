{
  "version": 2,
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "public",
  "env": {
    "NODE_ENV": "production"
  }
}

